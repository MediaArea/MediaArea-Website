    {% endimage %}
    {% image '@MediaConchBundle/Resources/public/img/ec_logo.png' %}
        <a href="https://ec.europa.eu/research/fp7/index_en.cfm" target="_blank"><img src="{{ asset_url }}" alt="FP7-ICT Programme logo" title="FP7-ICT Programme"></a>
    {% endimage %}
</section>
{% endblock %}
