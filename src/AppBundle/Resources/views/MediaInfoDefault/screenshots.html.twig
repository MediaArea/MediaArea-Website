                <img src="{{ asset_url }}" alt="Windows &quot;Text&quot; view" width="300" height="363">
                {% endimage %}
            </a>
            {% endimage %}
        </li>
        <li>
            {% image '@AppBundle/Resources/public/img/Screenshot/MediaInfo_Windows_Tree_en.png' %}
