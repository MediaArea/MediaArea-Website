{% extends 'AppBundle::base.html.twig' %}

{% block title %}{% trans %}screenshots.page.title{% endtrans %}{% endblock %}
{% block description %}{% trans %}about.page.description{% endtrans %}{% endblock %}
{% block keywords %}{% trans %}about.page.keywords{% endtrans %}{% endblock %}

{% block body %}
<h1>{% trans %}screenshots.title{% endtrans %}</h1>

<div>
    <h2 id="windows">Windows</h2>
    <ul class="thumbnails">
        <li>
            {% image '@AppBundle/Resources/public/img/Screenshot/MediaInfo_Windows_Easy_en.png' %}
            <a class="fancybox-thumb" data-fancybox-group="galleryWin" href="{{ asset_url }}" title="Windows &quot;Easy&quot; view">
                {% image '@AppBundle/Resources/public/img/Screenshot/MediaInfo_Windows_Easy_en-thumb.png' %}
                <img src="{{ asset_url }}" alt="Windows &quot;Easy&quot; view" width="300" height="195">
                {% endimage %}
            </a>
            {% endimage %}
        </li>
        <li>
            {% image '@AppBundle/Resources/public/img/Screenshot/MediaInfo_Windows_Text_en.png' %}
