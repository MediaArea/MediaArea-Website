{% extends 'EmbARCBundle::base.html.twig' %}

{% block title %}embARC{% endblock %}

{% block head %}
<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "SoftwareApplication",
    "name": "embARC",
    "headline": "embARC manages internal file metadata including embedding and validation of a subset of MXF files, as well as DPX files",
    "url": "{{ absolute_url(path('embarc_home')) }}",
    "dateModified": "{{ downloadInfo.date }}",
    "operatingSystem": "Windows, macOS, Linux",
    "applicationCategory": "Multimedia, Video",
    "softwareVersion": "{{ downloadInfo.version }}",
    "creator": {
        "@type": "Organization",
        "name": "MediaArea",
        "url": "{{ absolute_url(path('homepage')) }}"
    }
}
</script>
{% endblock %}

{% block body %}
<section class="download-wrapper">
    <div class="row reorder-xs">
        <div class="v-align carousel-padding-xs col-xs-12 col-sm-5">
            <div>
            </div>
        </div>
        <div class="v-align col-sm-7">
            <div class="center-font-xs">
                <h1 class="v-align bigtitle">embARC</h1>
            </div>
            <div class="projectDescription center-font-xs">
                <strong>embARC</strong>  is a free, open source application that enables users to manage (i.e., audit, validate and correct) embedded metadata in Digital Picture Exchange (DPX) files as individual files or an entire DPX sequence as well as RDD 48 compliant Material Exchange Format (MXF) files including FFV1 in MXF, while not impacting the image data. Functionality for other formats will be added over time.<br>
                Funded by the <a href="https://www.loc.gov/" target="_blank">Library of Congress</a> and <a href="http://www.digitizationguidelines.gov/" target="_blank">FADGI (Federal Agencies Digital Guidelines Initiative)</a>; initially designed, developed and led by AVPreserve; currently developed and led by MediaArea.<br>
            </div>

            {% set downloadLink = path(downloadInfo.route) %}

            <div class="inner center-xs center-font-xs">
                <div class="btn-group hidden-xs">
                    <a class="btn btn-default btn-lg btn-dl " href="{{ downloadLink }}">
                        <span class="downloadText">Download embARC</span>
                    </a>
                    <a href="{{ path('embarc_download') }}" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-default platform-icons">
                        <li><a href="{{ path('embarc_download_windows') }}">Windows</a></li>
                        <li><a href="{{ path('embarc_download_mac') }}">macOS</a></li>
                        <li><a href="{{ path('embarc_download_linux') }}">Linux</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="{{ path('embarc_download') }}">Other systems</a></li>
                    </ul>
                </div>
                <div class="btn-group visible-xs visible-xs-inline-block">
                    <a class="btn btn-default btn-lg btn-dl " href="{{ path(downloadInfo.route) }}">
                        <span class="downloadText">Download embARC</span>
                    </a>
                </div>

                <div class="projectDescription">
                    <div class="downloadDetails">
                        Version {{ downloadInfo.version }}{% if downloadInfo.name %}, for {{ downloadInfo.name }}{% endif %}
                    <br>
                    Other versions (packaging, OS, interface...) are also <a href="{{ path('embarc_download') }}">available</a>
                    {% image '@AppBundle/Resources/public/img/blank.gif' %}
                    (<a href="{{ path('embarc_download_windows') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Microsoft Windows" title="Microsoft Windows" class="sprite Windows"></a>)
                    <a href="{{ path('embarc_download_mac') }}"><img src="{{ asset_url }}" width="16" height="16" alt="macOS" title="macOS" class="sprite MacOS"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Linux" title="Linux" class="sprite Ubuntu"></a>)
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Debian" title="Debian" class="sprite Debian"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Ubuntu" title="Ubuntu" class="sprite Ubuntu"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Linux Mint" title="Linux Mint" class="sprite Linux_Mint"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="RedHat Entreprise Linux" title="RedHat Entreprise Linux" class="sprite RedHat"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="CentOS" title="CentOS" class="sprite CentOS"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Fedora" title="Fedora" class="sprite Fedora"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="openSUSE" title="openSUSE" class="sprite openSUSE"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="ArchLinux" title="ArchLinux" class="sprite ArchLinux"></a>
                    <a href="{{ path('embarc_download_linux') }}"><img src="{{ asset_url }}" width="16" height="16" alt="Raspbian" title="Raspbian" class="sprite Raspbian"></a>
                    {% endimage %}
                    <br>
                    See <a href="https://github.com/LibraryOfCongress/embARC">Source code on GitHub</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

